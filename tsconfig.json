{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/",
    "rootDir": "src/"
  },
  "include": ["src/modules/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
